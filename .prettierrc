{
    "printWidth": 80,
    "useTabs": false,
    "tabWidth": 4,
    "semi": true,
    "bracketSpacing": true,
    "singleQuote": true,
    "trailingComma": "all",
    "arrowParens": "always",
    "endOfLine": "lf",
    "proseWrap": "always",
    "plugins": ["prettier-plugin-sort-members"],
    "overrides": [
        {
            "files": ["package.json"],
            "options": {
                "tabWidth": 2
            }
        }
    ],
    "formatOnSave": true,
    "[typescriptreact]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    }
}